{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "include_terminated": {
      "oneOf": [
        { "type": "boolean", "default": false },
        { "type": "integer", "enum": [0, 1], "default": 0 }
      ]
    },
    "user_id": {
      "type": "integer",
      "maxLength": 10,
      "minimum": 1,
      "description": "Optional. For advanced usage, user_id can be added but is not required."
    }
  }
}
